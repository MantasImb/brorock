---
import SidebarComponent from '../components/sidebar.tsx'
import HeaderBar from '../components/HeaderBar.tsx'
import "../globals.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Origin Fund Protocol" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col items-center justify-center gap-12 bg-background text-main">
		<HeaderBar client:load />
		<SidebarComponent client:load />
		<slot />
	</body>
</html>
